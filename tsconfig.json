{
    "version": "1.5.3",
    "compilerOptions": {
        "target": "es6",
        "declaration": false,
        "noImplicitAny": false,
        "removeComments": true,
        "noLib": false,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true,
        "rootDir": "src/",
        "outDir": "dist/js/"
    },
    "filesGlob": [
        "./src/**/*.ts",
        "!./node_modules/**/*"
    ],
    "files": [
        "./src/app.ts",
        "./src/env/config.d.ts",
        "./src/env/local.ts",
        "./src/ext/react-dom.d.ts",
        "./src/ext/react.d.ts",
        "./src/lib/avers.ts",
        "./src/lib/avers/core.ts",
        "./src/lib/avers/session.ts",
        "./src/lib/avers/shared.ts",
        "./src/lib/avers/storage.ts",
        "./src/lib/computation.ts",
        "./src/main.ts",
        "./src/storage.ts",
        "./src/views.ts"
    ]
}
